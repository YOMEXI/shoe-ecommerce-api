{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    /* Language and Environment */
    "target": "es2016",
    "moduleResolution": "node",
    /* Modules */
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,

    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
